<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/bg_rounded_item"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bankNameTrxList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BJB"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#2192FF"
                        />

                    <TextView
                        android:id="@+id/dateTrxList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"
                        tools:text="20-02-2023 15:20:23"
                        android:textColor="#000000" />

                </LinearLayout>

                <TextView
                    android:id="@+id/net_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="NetAmount"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom"
                    android:gravity="end"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/customerNameTrxList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="**********"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/nominalTrxList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="+Rp 100.000,00"
                android:textColor="@color/blue_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="5dp"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/trxListId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/transaction_id"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/trxListStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Success)"
                android:layout_weight="1"
                android:gravity="end"
                android:textStyle="bold"
                android:textColor="@color/purple_color"
                android:layout_marginEnd="15dp"
                />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>