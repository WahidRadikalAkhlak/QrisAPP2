<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.qr.QrScannerActivity"
    android:background="@drawable/bg_qr"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_dark"
        android:id="@+id/canvas_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/code_scanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="@string/scan_qr_customer"
            android:textSize="18sp"
            android:textStyle="bold" />


    </FrameLayout>

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/code_scanner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/canvas_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/create_qr_dynamic">

    </com.budiyev.android.codescanner.CodeScannerView>

    <LinearLayout
        android:id="@+id/create_qr_dynamic"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcreateshow_bg"
        android:elevation="10dp"
        android:padding="6dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@id/show_qr_dynamic"
        app:layout_constraintTop_toBottomOf="@+id/code_scanner">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/createqr"
            android:contentDescription="@string/create_qr_dynamic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/create_qr_dynamic"
            android:textColor="#191597"
            android:lines="2"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_qr_dynamic"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcreateshow_bg"
        android:elevation="10dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/create_qr_dynamic"
        app:layout_constraintTop_toBottomOf="@+id/code_scanner">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/show_qr"
            android:contentDescription="@string/show_qr_dynamic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/show_qr_dynamic"
            android:textColor="#191597"
            android:textSize="14sp"
            android:lines="2"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/create_qr_static"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcreateshow_bg"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/create_qr_dynamic"
        app:layout_constraintEnd_toStartOf="@id/show_qr_static">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/createqr"
            android:contentDescription="@string/create_qr_dynamic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Create Qr Static"
            android:lines="2"
            android:textColor="#191597"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_qr_static"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcreateshow_bg"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/create_qr_dynamic"
        app:layout_constraintTop_toBottomOf="@+id/show_qr_dynamic">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/show_qr"
            android:contentDescription="@string/show_qr_dynamic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Show Qr Static"
            android:textColor="#191597"
            android:lines="2"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />


</androidx.constraintlayout.widget.ConstraintLayout>